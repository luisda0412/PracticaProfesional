
@model IEnumerable < Infraestructure.Models.Arqueos_Caja>

@{
    ViewBag.Title = "Caja Chica";
}


<link rel="stylesheet" href="~/Content/CSSEstiloCaja/EstiloListaCaja.css">

<section class="section_header">
    <br />
    <div class="contenidoHeader">
        <div class="izquieroHeader">
            <br />
            <br />
            <div class="logo">
                <img src="~/Imagenes/Logos/logo1.png" />
            </div>
            <br />
            <h2>
                Estado actual de la caja chica
            </h2>

        </div>
        <div class="derechoHeader">
            <img src="~/Imagenes/Visuals/wallpaper2.png" />
        </div>
    </div>
    <div class="wave" style="height: 135px; overflow: hidden;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none"
             style="height: 100%; width: 100%;">
            <path d="M-15.52,87.33 C142.49,-1.47 348.47,137.66 501.97,91.28 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: white;"></path>
        </svg>
    </div>
</section>
<main>
    <center>
        <section class="desarrollo">
            <div class="elementos1">
                <div class="elementoizquierdo">
                    <h2 class="titulo">Registros de caja realizados</h2>           
                </div>
                <div class="col-md-4">
                    <button class="boton1"><p>@Html.ActionLink("Abrir/Cerrar Caja", "ArquearCaja")</p></button>
                    <!--<button class="boton3">Html.ActionLink("Habilitar/Desabilitar usuario", "desabilitar", "Usuario", new { id = item.id }, new { style = "text-decoration:none", class = "btn-outline-success" })</button>-->
                </div>
            </div>
            <br />
            <br />
            <center>
                <div id="ajaxLoader" class="loader" ; style="display:none">
                    <svg viewBox="0 0 80 80">
                        <circle id="test" cx="40" cy="40" r="32"></circle>
                    </svg>
                </div>

                <div id="ajaxLoader" class="loader triangle" ; style="display:none">
                    <svg viewBox="0 0 86 80">
                        <polygon points="43 8 79 72 7 72"></polygon>
                    </svg>
                </div>

                <div id="ajaxLoader" class="loader" ; style="display:none">
                    <svg viewBox="0 0 80 80">
                        <rect x="8" y="8" width="64" height="64"></rect>
                    </svg>
                </div>
                <div class="container">
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fecha)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estado)
                                </th>
                                <th style="text-align:right">
                                    @Html.DisplayNameFor(model => model.saldo)
                                </th>
                            </tr>
                        </thead>
                        <tbody id="resultado">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fecha)
                                    </td>
                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario.nombre)
                                    </td>
                                    <td>
                                        @{ string isActive = item.estado == true ? "Abierta" : "Cerrada"; }
                                        @isActive
                                    </td>
                                       <td style="text-align:right">
                                        ₡@Html.DisplayFor(modelItem => item.saldo)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </center>
        </section>
    </center>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryajax")
}


