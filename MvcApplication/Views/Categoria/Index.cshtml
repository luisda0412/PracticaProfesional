@model IEnumerable<Infraestructure.Models.Categoria>

@{
    ViewBag.Title = "Lista Categorias";
}


<link rel="stylesheet" href="~/Content/CSSEstiloCategoria/EstiloListaCategorias.css">

<section class="section_header">
    <br />
    <div class="contenidoHeader">
        <div class="izquieroHeader">
            <br />
            <br />
            <div class="logo">
                <img src="~/Imagenes/Logos/logo1.png" />
            </div>
            <br />
            <h2>
                Lista de categorías actuales...
            </h2>

        </div>
        <div class="derechoHeader">
            <img src="~/Imagenes/Visuals/wallpaper6.png" />
        </div>
    </div>
    <div class="wave" style="height: 135px; overflow: hidden;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none"
             style="height: 100%; width: 100%;">
            <path d="M-15.52,87.33 C142.49,-1.47 348.47,137.66 501.97,91.28 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: white;"></path>
        </svg>
    </div>
</section>
<main>
    <center>
        <section class="desarrollo">
            <div class="elementos1">
                <div class="elementoizquierdo">
                    <h2 class="titulo">Categorías existentes</h2>
                    <button class="boton1"><p>@Html.ActionLink("Crear una nueva categoría", "Create")</p></button>
                </div>
                <div class="col-md-4">
                    <div class="card my-4">
                        <h5 class="card-header">Buscar categoría por nombre</h5>
                        @using (Ajax.BeginForm("buscarCategoriaxNombre", "Categoria", new AjaxOptions
                        {
                            UpdateTargetId = "resultado",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET",
                            LoadingElementId = "ajaxLoader"
                        }))
                        {
                            <div class="card-body">
                                <div class="input-group">
                                    @Html.TextBox("filtro", "", new { @class = "form-control", @placeholder = "Nombre de la categoría" })

                                    <button type="submit" class="boton3">Buscar</button>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <br />
            <br />
            <center>
                <div id="ajaxLoader" class="loader" ; style="display:none">
                    <svg viewBox="0 0 80 80">
                        <circle id="test" cx="40" cy="40" r="32"></circle>
                    </svg>
                </div>

                <div id="ajaxLoader" class="loader triangle" ; style="display:none">
                    <svg viewBox="0 0 86 80">
                        <polygon points="43 8 79 72 7 72"></polygon>
                    </svg>
                </div>

                <div id="ajaxLoader" class="loader" ; style="display:none">
                    <svg viewBox="0 0 80 80">
                        <rect x="8" y="8" width="64" height="64"></rect>
                    </svg>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th><p>Opciones</p></th>
                        </tr>
                    </thead>
                    <tbody id="resultado">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td class="columnabotones">
                                    <button class="boton2">@Html.ActionLink("Editar", "Edit", new { id = item.id })</button>
                                    <button class="boton2">@Html.ActionLink("Detalles", "Details", new { id = item.id })</button>
                                    @Html.ActionLink("Habilitar/Desabilitar categoria", "EliminarCategoria", "Categoria", new { id = item.id }, new { style = "text-decoration:none", @class = "btn-outline-success" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </center>
        </section>
    </center>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryajax")
}

