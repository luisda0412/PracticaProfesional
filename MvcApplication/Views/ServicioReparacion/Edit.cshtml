@model Infraestructure.Models.Servicio_Reparacion


@{
    ViewBag.Title = "Editar Servicio";
}


<link rel="stylesheet" href="~/Content/CSSEstiloServicios/EstiloCreate.css">
<section class="section_header">
    <br />
    <div class="contenidoHeader">
        <div class="izquieroHeader">
            <br />
            <div class="logo">
                <img src="~/Imagenes/Logos/logo1.png" />
            </div>
            <br />
            <h2>
                Editar servicio de reparación
            </h2>

        </div>
        <div class="derechoHeader">
            <img src="~/Imagenes/Visuals/wallpaper12.png" />
        </div>
    </div>
    <div class="wave" style="height: 150px; overflow: hidden;">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none"
             style="height: 100%; width: 100%;">
            <path d="M-15.52,87.33 C142.49,-1.47 348.47,137.66 501.97,91.28 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: white;"></path>
        </svg>
    </div>
</section>

<main>
    <center>
        @using (Html.BeginForm("Save", "ServicioReparacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.estado)

            <h4 id="titulo">Modificar la información del servicio</h4>
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="secciones">
                <div class="seccion1">
                    <section class="cuerpoleft">
                        <div class="form-group">
                            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </section>
                    <section class="cuerporight">
                        <div class="form-group">
                            @Html.LabelFor(model => model.costo, htmlAttributes: new { @class = "control-label col-md-2", })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control", @type = "number"  } })
                                @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </section>
                </div>
                <div class="seccion2">
                    <div class="form-group2">
                        <input type="submit" value="Guardar Servicio" class="btn btn-default" />
                        <button class="btn">@Html.ActionLink("<- Volver Atrás", "Index")</button>
                    </div>
                </div>
                <br />
            </div>
        }
        <br />
        <br />
    </center>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

