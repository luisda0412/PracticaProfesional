@model List<Web.ViewModel.ViewModelDetalleEncabezado>

<div class="table-responsive-sm">
    @*Accion, nombre de controlador*@

    <table class="table table-striped">
        @if (Model != null)
        {
            <tr>
                <th>
                    Artículo
                </th>
                <th class="center">
                    Cantidad
                </th>
                <th class="right">
                    Precio
                </th>
                <th class="right">
                    Total
                </th>
                <th>
                    Opciones
                </th>
            </tr>

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.articulo.id)
                        @Html.DisplayFor(modelItem => item.articulo.nombre)
                    </td>
                    <td class="center" style="width:1.5em">
                        @Html.EditorFor(modelItem => item.cantidad, new { htmlAttributes = new { @class = "form-control changeCantidad", data_productoid = item.articulo.id, onchange = "updateCantidad(this)" } })
                    </td>
                    <td class="right">

                        @Html.DisplayFor(modelItem => item.precio)
                    </td>

                    <td class="right">
                        @Html.DisplayFor(modelItem => item.SubTotal)
                    </td>
                    <td>
                        @Ajax.ActionLink("X",//Texto para el usuario
                             "eliminarProducto",//Acción a llamar
                             "Venta",
                             new
                             {
                                 idArticulo = item.idArticulo
                             },//Parámetros a enviar
                             new AjaxOptions
                             {
                                 UpdateTargetId = "resultadoDetalle",
                                 InsertionMode = InsertionMode.Replace,
                                 HttpMethod = "GET",
                                 OnComplete = "updateCantLibros()"
                             }, new { @class = "btn btn-primary" }
                             )

                    </td>
                </tr>
            }
        }
    </table>

</div>
@if (Model != null)
{

    <div class="row">
        <div class="col-lg-5 col-sm-5"></div>
        <div class="col-lg-7 col-sm-5 ml-auto">
            <table class="table table-clear">
                <tbody>
                    <tr>
                        <td class="left">
                            <strong>Subtotal</strong>
                        </td>
                        <td class="right">
                            <strong>₡ @(((decimal)Web.ViewModel.Carrito.Instancia.GetSubTotal()))</strong>
                        </td>
                    </tr>

                    <tr>
                        <td class="left">
                            <strong>Impuesto</strong>
                        </td>
                        <td class="right">
                            <strong>+ ₡ @(((decimal)Web.ViewModel.Carrito.Instancia.GetImpuesto()))</strong>
                        </td>
                    </tr>

                    <tr>
                        <td class="left">
                            <strong>Total</strong>
                        </td>
                        <td class="right">
                            <strong>₡ @(((decimal)Web.ViewModel.Carrito.Instancia.GetTotal()))</strong>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
}